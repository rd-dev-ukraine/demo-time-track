@model dynamic

<div class="btn-group">
    <label class="btn btn-primary" ng-model="byUserMode" btn-radio=" true ">By User</label>
    <label class="btn btn-primary" ng-model="byUserMode" btn-radio=" false ">By Project</label>
</div>
<div ng-repeat="user in data.users"
     ng-if="byUserMode">
    <h3>{{user.displayName}}</h3>

    <div class="clearfix">
        <div class="col-lg-9 col-lg-offset-2 col-md-12 col-sm-12 col-xs-12">
            <div class="date-range mon-wed">
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3"
                     ng-repeat="d in dates.slice(0, 4)"
                     ng-bind="dateService.formatDay(d)">
                </div>
            </div>
            <div class="date-range thu-sun">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4"
                     ng-repeat="d in dates.slice(4, 7)"
                     ng-bind="dateService.formatDay(d)">
                </div>
            </div>
        </div>
    </div>

    <div class="clearfix"
         ng-repeat="project in projectsForUser(user.id) track by project.id">
        <div class="col-lg-2">
            {{project.name}}
            <a ui-sref="billProject({ projectId: project.id })"
               ng-if="canBillProject(project)"
               title="Bill project">
                <span class="glyphicon glyphicon-list-alt"></span>
            </a>
        </div>
        <div class="col-lg-9">
            <div class="date-range mon-wed">
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3 time-cell__container"
                     ng-repeat="d in dates.slice(0, 4)"
                     ng-init="project=project;cell=cell(project.id, d, user.id);"
                     ng-include="urls.templates.timeCell">

                </div>
            </div>
            <div class="date-range thu-sun">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4"
                     ng-repeat="d in dates.slice(4, 7)"
                     ng-init="project=project;cell=cell(project.id, d, user.id);"
                     ng-include="urls.templates.timeCell">
                </div>
            </div>
        </div>
        <div class="col-lg-1 text-muted">
            {{totalHours({userId: user.id, projectId: project.id })}}hrs
        </div>
    </div>

    <div class="clearfix hidden-md hidden-sm hidden-xs">
        <div class="col-lg-offset-2 col-lg-9">
            <div class="date-range mon-wed">
                <div class="col-lg-3 text-muted"
                     ng-repeat="d in dates.slice(0, 4)">
                    {{totalHours({userId: user.id, at: d })}}hrs
                </div>
            </div>
            <div class="date-range thu-sun">
                <div class="col-lg-4 text-muted"
                     ng-repeat="d in dates.slice(4, 7)">
                    {{totalHours({userId: user.id, at: d })}}hrs
                </div>
            </div>
        </div>
    </div>
  
</div>

<div ng-repeat="project in data.projects"
     ng-if="!byUserMode">
    <h3>
        {{project.name}}
        <a ui-sref="billProject({ projectId: project.id })"
           ng-if="canBillProject(project)"
           title="Bill project">
            <span class="glyphicon glyphicon-list-alt"></span>
        </a>
    </h3>

    <div class="clearfix">
        <div class="col-lg-9 col-lg-offset-2 col-md-12 col-sm-12 col-xs-12">
            <div class="date-range mon-wed">
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3"
                     ng-repeat="d in dates.slice(0, 4)"
                     ng-bind="dateService.formatDay(d)">
                </div>
            </div>
            <div class="date-range thu-sun">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4"
                     ng-repeat="d in dates.slice(4, 7)"
                     ng-bind="dateService.formatDay(d)">
                </div>
            </div>
        </div>
    </div>

    <div class="clearfix"
         ng-repeat="user in usersForProject(project.id)">
        <div class="col-lg-2">
            {{user.displayName}}
            <a ui-sref="billProject({ projectId: project.id })"
               ng-if="canBillProject(project)"
               title="Bill project">
                <span class="glyphicon glyphicon-list-alt"></span>
            </a>
        </div>
        <div class="col-lg-9">
            <div class="date-range mon-wed">
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3 time-cell__container"
                     ng-repeat="d in dates.slice(0, 4)"
                     ng-init="project=project;cell=cell(project.id, d, user.id);"
                     ng-include="urls.templates.timeCell">

                </div>
            </div>
            <div class="date-range thu-sun">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4"
                     ng-repeat="d in dates.slice(4, 7)"
                     ng-init="project=project;cell=cell(project.id, d, user.id);"
                     ng-include="urls.templates.timeCell">
                </div>
            </div>
        </div>
        <div class="col-lg-1 text-muted">
            {{totalHours({userId: user.id, projectId: project.id })}}hrs
        </div>
    </div>

    <div class="clearfix hidden-md hidden-sm hidden-xs">
        <div class="col-lg-offset-2 col-lg-9">
            <div class="date-range mon-wed">
                <div class="col-lg-3 text-muted"
                     ng-repeat="d in dates.slice(0, 4)">
                    {{totalHours({projectId: project.id, at: d })}}hrs
                </div>
            </div>
            <div class="date-range thu-sun">
                <div class="col-lg-4 text-muted"
                     ng-repeat="d in dates.slice(4, 7)">
                    {{totalHours({projectId: project.id, at: d })}}hrs
                </div>
            </div>
        </div>
    </div>
</div>