@model dynamic

<div class="clearfix">
    <h2>
        Track time
    </h2>
</div>
<ul class="nav nav-pills">
    <li ui-sref-active="active">
        <a ui-sref="track-time.my({ at: at })">My Time</a>
    </li>
    <li ui-sref-active="active">
        <a ui-sref="track-time.users({ at: at })">Report for other users</a>
    </li>

</ul>
<div class="user-statistics__container"
     ng-controller="statisticsController">
    <div class="user-statistics">
        <p class="user-statistics__value"
           ng-if="statistics.value">
            Total hours: {{statistics.value.totalHours}}
        </p>
        <p class="user-statistics__value"
           ng-if="statistics.value">
            Total earnings: ${{statistics.value.totalEarnings}}
        </p>
        <span ng-if="statistics.isLoading">LOADING..</span>
    </div>

</div>
<div class="panel panel-default">
    <div class="panel-body">
        <form class="form-inline">
            <div class="form-group">
                <label>Date</label>
                <input class="form-control"
                       ng-model="at"
                       ng-model-options="{ updateOn: 'default blur', debounce: {'default': 500, 'blur': 0} }"
                       type="text" />
            </div>
        </form>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-body">
        <ui-view />
    </div>
</div>