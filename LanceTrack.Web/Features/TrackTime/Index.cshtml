@model dynamic

<div class="clearfix">

    <h2>
        Track time
    </h2>
    <a ng-click="$event.preventDefault(); recalculateAll();"
       href="#">
        Recalculate All
        <span ng-if="recalculateAll.isLoading"> ... in progress </span>
    </a>
</div>
<div class="panel panel-default">
    <form class="form-inline panel-body">
        <div class="form-group">
            <label>Date</label>
            <input class="form-control"
                   ng-model="date"
                   ng-model-options="{ updateOn: 'default blur', debounce: {'default': 500, 'blur': 0} }"
                   
                   type="text" />
        </div>
    </form>
</div>
<div class="panel panel-default">
    <table class="table table-bordered panel-body">
        <thead>
            <tr>
                <th>
                    Project
                </th>
                <th ng-repeat="d in dateRange()" ng-bind="d"></th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="project in projectTime track by project.projectId">
                <td ng-bind="project.projectTitle"></td>
                <td ng-repeat="time in project.time">
                    <div ng-controller="timeCellController"
                         ng-init="project=project;cell=time;">
                        <input class="form-control"
                               ng-model="cell.hours"
                               type="text"
                               title="{{project.projectTitle}}" />
                        <span ng-if="trackTime.isLoading">Loading</span>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>